{
  "info": {
    "_postman_id": "85a5ca48-c930-4fb7-a02f-e5f541126bed",
    "name": "WebDev API (Auto Auth)",
    "description": "WebDev API collection with Supabase refresh-token bootstrap flow for Postman.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://webdev-uat.vercel.app"
    },
    {
      "key": "supabaseUrl",
      "value": ""
    },
    {
      "key": "supabaseAnonKey",
      "value": ""
    },
    {
      "key": "accessToken",
      "value": ""
    },
    {
      "key": "refreshToken",
      "value": ""
    },
    {
      "key": "tokenExpiresAt",
      "value": ""
    },
    {
      "key": "adminToken",
      "value": ""
    },
    {
      "key": "profileId",
      "value": ""
    },
    {
      "key": "postId",
      "value": ""
    },
    {
      "key": "commentId",
      "value": ""
    },
    {
      "key": "runId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth Bootstrap",
      "item": [
        {
          "name": "Refresh Supabase Session",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const required = ['supabaseUrl', 'supabaseAnonKey', 'refreshToken'];",
                  "const missing = required.filter((k) => !pm.environment.get(k));",
                  "if (missing.length > 0) {",
                  "  throw new Error(`Missing env vars: ${missing.join(', ')}`);",
                  "}"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Refresh succeeds', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "const body = pm.response.json();",
                  "if (body && body.access_token) {",
                  "  pm.environment.set('accessToken', body.access_token);",
                  "}",
                  "if (body && body.refresh_token) {",
                  "  pm.environment.set('refreshToken', body.refresh_token);",
                  "}",
                  "if (body && body.expires_at) {",
                  "  pm.environment.set('tokenExpiresAt', String(body.expires_at));",
                  "} else if (body && body.expires_in) {",
                  "  const nowSeconds = Math.floor(Date.now() / 1000);",
                  "  pm.environment.set('tokenExpiresAt', String(nowSeconds + Number(body.expires_in)));",
                  "}",
                  "",
                  "pm.test('Access token saved', function () {",
                  "  pm.expect(pm.environment.get('accessToken')).to.be.a('string').and.not.empty;",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "apikey",
                "value": "{{supabaseAnonKey}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh_token\": \"{{refreshToken}}\"\n}"
            },
            "url": "{{supabaseUrl}}/auth/v1/token?grant_type=refresh_token"
          }
        }
      ]
    },
    {
      "name": "Health and Auth",
      "item": [
        {
          "name": "Health",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "url": "{{baseUrl}}/api/health"
          }
        },
        {
          "name": "Me",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/me"
          }
        },
        {
          "name": "My Avatar",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/me/avatar"
          }
        }
      ]
    },
    {
      "name": "Feed",
      "item": [
        {
          "name": "List Feed",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/feeds?limit=20"
          }
        },
        {
          "name": "Create Post",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"kind\": \"post\",\n  \"body\": \"Hello feed from Postman\"\n}"
            },
            "url": "{{baseUrl}}/api/feeds"
          }
        },
        {
          "name": "Delete Post",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/api/feeds/items/{{postId}}"
          }
        },
        {
          "name": "List Post Comments",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/feeds/items/{{postId}}/comments"
          }
        },
        {
          "name": "Delete Comment",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/api/feeds/comments/{{commentId}}"
          }
        }
      ]
    },
    {
      "name": "Admin",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "if (pm.collectionVariables.get('adminToken') || pm.environment.get('adminToken')) {",
              "  pm.request.headers.upsert({ key: 'x-admin-token', value: pm.environment.get('adminToken') || pm.collectionVariables.get('adminToken') });",
              "}"
            ]
          }
        }
      ],
      "item": [
        {
          "name": "Resume Thumbnail Summary",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/admin/resume-thumbnails/summary"
          }
        },
        {
          "name": "Resume Thumbnail Runs",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/admin/resume-thumbnails/runs?limit=20&offset=0"
          }
        },
        {
          "name": "Resume Thumbnail Run Detail",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/admin/resume-thumbnails/runs/{{runId}}"
          }
        },
        {
          "name": "Resume Thumbnail Retry",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"profileId\": \"{{profileId}}\"\n}"
            },
            "url": "{{baseUrl}}/api/admin/resume-thumbnails/retry"
          }
        }
      ]
    }
  ]
}
