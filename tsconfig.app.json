{
  "compilerOptions": {
    /* Language and environment */
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",

    /* Module system */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Strictness */
    "strict": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    /* Emit */
    "noEmit": true,

    /* Performance / sanity */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Path aliases (THIS is the important fix) */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },

  /* What this config applies to */
  "include": ["src"],

  /* Explicitly exclude non-frontend code */
  "exclude": ["node_modules", "dist", "backend", "supabase", "tests", "e2e"]
}
